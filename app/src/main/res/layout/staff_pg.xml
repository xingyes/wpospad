<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="220dp"
    android:paddingRight="220dp"
    >
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@color/global_75_black"
        android:orientation="horizontal">

        <com.android.volley.toolbox.NetworkImageView

            android:layout_margin="50dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/head_img"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical">
                <TextView
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:textColor="@color/white"
                android:text="编号"/>
                <EditText
                android:editable="false"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:textSize="24dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/white"
                android:singleLine="true"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:id="@+id/code"
                android:text="我喔喔我"
                android:gravity="left|center_vertical"
                android:background="@drawable/button_gray_frame_round"
                android:textColorHint="@color/global_text_info_color"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28dp"
                    android:textColor="@color/white"
                    android:text="姓名"/>
                <EditText
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:textSize="24dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/white"
                    android:singleLine="true"
                    android:layout_width="280dp"
                    android:layout_height="60dp"
                    android:id="@+id/name"
                    android:text="我喔喔我"
                    android:gravity="left|center_vertical"
                    android:background="@drawable/button_gray_frame_round"
                    android:textColorHint="@color/global_text_info_color"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28dp"
                    android:textColor="@color/white"
                    android:text="手机"/>
                <EditText
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:textSize="24dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/white"
                    android:singleLine="true"
                    android:layout_width="280dp"
                    android:layout_height="60dp"
                    android:id="@+id/phone"
                    android:text="我喔喔我"
                    android:gravity="left|center_vertical"
                    android:background="@drawable/button_gray_frame_round"
                    android:textColorHint="@color/global_text_info_color"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28dp"
                    android:textColor="@color/white"
                    android:text="密码"/>
                <EditText
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:textSize="24dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/white"
                    android:singleLine="true"
                    android:layout_width="280dp"
                    android:layout_height="60dp"
                    android:id="@+id/passwd"
                    android:text="我喔喔我"
                    android:gravity="left|center_vertical"
                    android:background="@drawable/button_gray_frame_round"
                    android:textColorHint="@color/global_text_info_color"/>
            </LinearLayout>

            <TextView
                android:background="@drawable/button_wpos_red_round_rect"
                android:layout_margin="70dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:textSize="30dp"
                android:id="@+id/submit_btn"
                android:textColor="@color/white"
                android:text="确认修改"/>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_alignTop="@+id/main_layout"
        android:layout_alignRight="@+id/main_layout"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="-20dp"
        android:padding="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/del_account"
        android:src="@mipmap/icon_del"/>
</RelativeLayout>
