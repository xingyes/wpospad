<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:inmost="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@mipmap/login_bg">

    <RelativeLayout
        android:id="@+id/manage_cate_nav_layout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.xingy.lib.ui.NavigationBar
            android:id="@+id/manage_cate_nav"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            inmost:leftVisiable="true"
            inmost:drawableLeft="@drawable/ico_back"
            inmost:bgColor="@color/global_text_gray"
            inmost:text="@string/manage_category"
            inmost:textColor="@color/white"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_alignBottom="@id/manage_cate_nav"
            android:gravity="center"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/manage_staff"
            android:drawableLeft="@mipmap/icon_del"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:id="@+id/manage_staff_btn"/>
    </RelativeLayout>


</RelativeLayout>