<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <!-- keyboard-->
    <LinearLayout
        android:id="@+id/right_keyboard"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/btn_1"
                android:textSize="@dimen/font_size_40xp"
                android:text="1"
                android:gravity="center"
                android:background="@drawable/button_gray_round"/>
            <TextView
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/btn_4"
                android:textSize="@dimen/font_size_40xp"
                android:text="4"
                android:gravity="center"
                android:background="@drawable/button_gray_round"/>
            <TextView
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/btn_7"
                android:textSize="@dimen/font_size_40xp"
                android:text="7"
                android:gravity="center"
                android:background="@drawable/button_gray_round"/>
            <TextView
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/btn_0"
                android:textSize="@dimen/font_size_40xp"
                android:text="0"
                android:gravity="center"
                android:background="@drawable/button_gray_round"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/btn_2"
                android:textSize="@dimen/font_size_40xp"
                android:text="2"
                android:gravity="center"
                android:background="@drawable/button_gray_round"/>
            <TextView
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/btn_5"
                android:textSize="@dimen/font_size_40xp"
                android:text="5"
                android:gravity="center"
                android:background="@drawable/button_gray_round"/>
            <TextView
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/btn_8"
                android:textSize="@dimen/font_size_40xp"
                android:text="8"
                android:gravity="center"
                android:background="@drawable/button_gray_round"/>
            <TextView
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/btn_back"
                android:textSize="@dimen/font_size_30xp"
                android:text="删除"
                android:gravity="center"
                android:background="@drawable/button_gray_round"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/btn_3"
                android:textSize="@dimen/font_size_40xp"
                android:text="3"
                android:gravity="center"
                android:background="@drawable/button_gray_round"/>
            <TextView
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/btn_6"
                android:textSize="@dimen/font_size_40xp"
                android:text="6"
                android:gravity="center"
                android:background="@drawable/button_gray_round"/>
            <TextView
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/btn_9"
                android:textSize="@dimen/font_size_40xp"
                android:text="9"
                android:gravity="center"
                android:background="@drawable/button_gray_round"/>
            <TextView
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/btn_ok"
                android:textSize="@dimen/font_size_30xp"
                android:text="@string/btn_ok"
                android:gravity="center"
                android:background="@drawable/button_gray_round"/>
        </LinearLayout>
     </LinearLayout>
    <!--end of keyboard-->

    <!--loginlayout-->
    <LinearLayout
        android:layout_toLeftOf="@id/right_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="50dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <cn.walkpos.wpospad.ui.NoinputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/account"
            android:padding="10dp"
            android:background="@drawable/none"
            android:hint="@string/account"
            android:textSize="@dimen/font_size_34xp"
            android:textColorHint="@color/global_text_info_color"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/global_gray"/>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/request_verify_code"
                android:textColor="@color/white"
                android:text="@string/send_verify_code"
                android:background="@drawable/button_gray_round"/>
            <cn.walkpos.wpospad.ui.NoinputEditText
                android:layout_toLeftOf="@id/request_verify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/password"
                android:inputType="numberPassword"
                android:padding="10dp"
                android:background="@drawable/none"
                android:hint="@string/password"
                android:textSize="@dimen/font_size_34xp"
                android:textColorHint="@color/global_text_info_color"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/global_gray"/>


        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/verify_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/login"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_gray_round"
            android:layout_centerHorizontal="true"/>


    </LinearLayout>
</RelativeLayout>
