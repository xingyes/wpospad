<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="15dp"
    android:orientation="vertical"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/cash_pro_btn_n"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/bill_total_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="总计"
            android:textSize="28dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/bill_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="28dp"
            android:text="0.00"
            android:textColor="@color/black"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="整单折扣"
            android:textSize="28dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/bill_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="28dp"
            android:text="1.0"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <TextView
        android:layout_gravity="right"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:id="@+id/income_total"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minLines="2"
        android:textSize="45dp"
        android:textColor="@color/btn_wpos_red"
        android:text="0.00"/>
    </LinearLayout>



    <!--buttons-->
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginRight="7dp"
            android:background="@drawable/button_pay_red"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            android:gravity="center"
            android:textSize="28dp"
            android:id="@+id/pay_discount"
            android:textColor="@drawable/gray_white_textcolor_selector"
            android:text="整单折扣"/>
        <TextView
            android:layout_marginLeft="7dp"
            android:background="@drawable/button_pay_blue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            android:gravity="center"
            android:textSize="28dp"
            android:id="@+id/pay_other"
            android:textColor="@drawable/gray_white_textcolor_selector"
            android:text="其他"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginRight="7dp"
            android:background="@drawable/button_pay_blue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            android:gravity="center"
            android:layout_gravity="right"
            android:textSize="28dp"
            android:id="@+id/pay_bank"
            android:textColor="@color/white"
            android:text="银行卡"/>
        <TextView
            android:layout_marginLeft="7dp"
            android:background="@drawable/button_pay_green"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            android:gravity="center"
            android:layout_gravity="right"
            android:textSize="28dp"
            android:id="@+id/pay_quick"
            android:textColor="@drawable/gray_white_textcolor_selector"
            android:text="快速收款"/>
    </LinearLayout>
    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_pay_blue"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_gravity="right"
        android:textSize="28dp"
        android:id="@+id/pay_cash"
        android:textColor="@color/white"
        android:text="现金收款"/>


</LinearLayout>

