<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:inmost="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/setting_bg">


    <com.xingy.lib.ui.NavigationBar
        android:layout_alignParentTop="true"
        android:id="@+id/setting_nav"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        inmost:leftVisiable="true"
        inmost:text="@string/basic_setting"
        inmost:drawableLeft="@drawable/ico_back"
        inmost:bgColor="@color/nav_wpos_bg"
        inmost:textColor="@color/white"/>

    <RadioGroup
        android:layout_below="@id/setting_nav"
        android:layout_marginTop="100dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/opt_radio_group">

        <RadioButton
            android:id="@+id/store_rb"
            android:gravity="center"
            android:background="@drawable/tab_red_left"
            android:button="@drawable/none"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="店铺设置"
            android:textSize="28dp"/>
        <RadioButton
            android:id="@+id/device_rb"
            android:gravity="center"
            android:background="@drawable/tab_red_left"
            android:button="@drawable/none"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="终端设置"
            android:textSize="28dp"/>
        <RadioButton
            android:id="@+id/passwd_rb"
            android:gravity="center"
            android:background="@drawable/tab_red_left"
            android:button="@drawable/none"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="密码修改"
            android:textSize="28dp"/>
        <RadioButton
            android:id="@+id/other_rb"
            android:gravity="center"
            android:background="@drawable/tab_red_left"
            android:button="@drawable/none"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="其他信息"
            android:textSize="28dp"/>

    </RadioGroup>

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/container_layout"
        android:layout_marginTop="60dp"
        android:layout_below="@id/setting_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@id/opt_radio_group">


        <include layout="@layout/set_basic_pg"/>
        <!--<include layout="@layout/set_dev_pg"/>-->
        <!--<include layout="@layout/set_passwd_pg"/>-->
        <!--<include layout="@layout/set_otherinfo_pg"/>-->

    </RelativeLayout>
    <include layout="@layout/global_loading" />


</RelativeLayout>
