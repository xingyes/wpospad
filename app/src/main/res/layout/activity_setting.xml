<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:inmost="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/setting_bg">


    <com.xingy.lib.ui.NavigationBar
        android:layout_alignParentTop="true"
        android:id="@+id/setting_nav"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        inmost:leftVisiable="true"
        inmost:text="@string/setting"
        inmost:drawableLeft="@drawable/ico_back"
        inmost:bgColor="@color/global_text_gray"
        inmost:textColor="@color/white"/>

    <RadioGroup
        android:layout_marginTop="160dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/radio_group_layout">

        <RadioButton
            android:gravity="center"
            android:background="@drawable/button_gray_round"
            android:button="@drawable/none"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="店铺设置"
            android:textSize="28dp"/>
        <RadioButton
            android:gravity="center"
            android:background="@drawable/button_gray_round"
            android:button="@drawable/none"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="终端设置"
            android:textSize="28dp"/>
        <RadioButton
            android:gravity="center"
            android:background="@drawable/button_gray_round"
            android:button="@drawable/none"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="密码修改"
            android:textSize="28dp"/>
        <RadioButton
            android:gravity="center"
            android:background="@drawable/button_gray_round"
            android:button="@drawable/none"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="其他信息"
            android:textSize="28dp"/>

    </RadioGroup>

    <LinearLayout
        android:layout_below="@id/setting_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/radio_group_layout"
        android:background="@color/red"/>


    <include layout="@layout/global_loading" />


</RelativeLayout>
