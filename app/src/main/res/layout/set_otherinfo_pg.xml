<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:inmost="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/item_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:padding="20dp"
            android:textSize="28dp"
            android:button="@drawable/none"
            android:gravity="center"
            android:background="@drawable/hori_tab_selector"
            android:textColor="@drawable/red_white_textcolor_selector"
            android:layout_weight="1"
            android:id="@+id/qa_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:checked="false"/>
        <RadioButton
            android:padding="20dp"
            android:textSize="28dp"
            android:button="@drawable/none"
            android:gravity="center"
            android:background="@drawable/hori_tab_selector"
            android:textColor="@drawable/red_white_textcolor_selector"
            android:layout_weight="1"
            android:id="@+id/feedback_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:checked="false"/>
        <RadioButton
            android:padding="20dp"
            android:textSize="28dp"
            android:button="@drawable/none"
            android:gravity="center"
            android:background="@drawable/hori_tab_selector"
            android:textColor="@drawable/red_white_textcolor_selector"
            android:layout_weight="1"
            android:id="@+id/share_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="分享转发"
            android:checked="false"/>
        <RadioButton
            android:padding="20dp"
            android:textSize="28dp"
            android:button="@drawable/none"
            android:gravity="center"
            android:background="@drawable/hori_tab_selector"
            android:textColor="@drawable/red_white_textcolor_selector"
            android:layout_weight="1"
            android:id="@+id/update_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="检查更新"
            android:checked="false"/>
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/otherinfo_vp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>


        <!--<include layout="@layout/info_qa_pg"/>-->
        <!--<include layout="@layout/info_update_pg"/>-->
        <!--<include layout="@layout/info_fb_pg"/>-->
        <!--<include layout="@layout/info_share_pg"/>-->

</LinearLayout>
