<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:background="@color/btn_wpos_gray_dark"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_gravity="center"
    android:padding="30dp">

    <LinearLayout
        android:layout_marginRight="50dp"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="总计"
                android:textSize="30dp"
                android:textColor="@color/global_text_info_color"/>
            <TextView
                android:id="@+id/bill_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="32dp"
                android:text="0.00"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="收款"
                android:textSize="30dp"
                android:textColor="@color/global_text_info_color"/>
            <TextView
                android:id="@+id/cash_income_ev"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:maxLength="14"
                android:textSize="30dp"
                android:textColor="@color/btn_wpos_red"/>
            <!--<cn.walkpos.wpospad.ui.NoinputEditText-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:singleLine="true"-->
            <!--android:id="@+id/cash_income_ev"-->
            <!--android:background="@drawable/none"-->
            <!--android:gravity="center"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="30dp"/>-->
        </RelativeLayout>

        <View
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/global_gray"/>
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="找零"
                android:textSize="30dp"
                android:textColor="@color/global_text_info_color"/>
            <TextView
                android:id="@+id/cash_change_tv"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:maxLength="14"
                android:textSize="30dp"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <TextView
            android:textSize="26dp"
            android:layout_marginTop="40dp"
            android:id="@+id/cash_pay_ok"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="@string/btn_ok"
            android:textColor="@color/white"
            android:background="@drawable/button_wpos_red_round_rect"
            android:layout_centerHorizontal="true"/>


    </LinearLayout>

    <View
        android:layout_marginRight="40dp"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/right_keyboard"
        android:background="@color/global_text_info_color"/>

    <!-- keyboard-->
    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/right_keyboard"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@drawable/gray_white_textcolor_selector"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:textSize="30dp"
                android:id="@+id/btn_1"
                android:text="1"
                android:gravity="center"
                android:background="@drawable/button_gray_frame_round"/>
            <TextView
                android:textColor="@drawable/gray_white_textcolor_selector"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:textSize="30dp"
                android:id="@+id/btn_4"
                android:text="4"
                android:gravity="center"
                android:background="@drawable/button_gray_frame_round"/>
            <TextView
                android:textColor="@drawable/gray_white_textcolor_selector"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:textSize="30dp"
                android:id="@+id/btn_7"
                android:text="7"
                android:gravity="center"
                android:background="@drawable/button_gray_frame_round"/>
            <TextView
                android:textColor="@drawable/gray_white_textcolor_selector"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:textSize="30dp"
                android:id="@+id/btn_0"
                android:text="0"
                android:gravity="center"
                android:background="@drawable/button_gray_frame_round"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@drawable/gray_white_textcolor_selector"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:textSize="30dp"
                android:id="@+id/btn_2"
                android:text="2"
                android:gravity="center"
                android:background="@drawable/button_gray_frame_round"/>
            <TextView
                android:textColor="@drawable/gray_white_textcolor_selector"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:textSize="30dp"
                android:id="@+id/btn_5"
                android:text="5"
                android:gravity="center"
                android:background="@drawable/button_gray_frame_round"/>
            <TextView
                android:textColor="@drawable/gray_white_textcolor_selector"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:textSize="30dp"
                android:id="@+id/btn_8"
                android:text="8"
                android:gravity="center"
                android:background="@drawable/button_gray_frame_round"/>
            <TextView
                android:textColor="@drawable/gray_white_textcolor_selector"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:textStyle="bold"
                android:id="@+id/btn_point"
                android:text="."
                android:gravity="center"
                android:background="@drawable/button_gray_frame_round"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@drawable/gray_white_textcolor_selector"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:textSize="30dp"
                android:id="@+id/btn_3"
                android:text="3"
                android:gravity="center"
                android:background="@drawable/button_gray_frame_round"/>
            <TextView
                android:textColor="@drawable/gray_white_textcolor_selector"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:textSize="30dp"
                android:id="@+id/btn_6"
                android:text="6"
                android:gravity="center"
                android:background="@drawable/button_gray_frame_round"/>
            <TextView
                android:textColor="@drawable/gray_white_textcolor_selector"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:textSize="30dp"
                android:id="@+id/btn_9"
                android:text="9"
                android:gravity="center"
                android:background="@drawable/button_gray_frame_round"/>
            <TextView
                android:textColor="@drawable/gray_white_textcolor_selector"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:textSize="30dp"
                android:id="@+id/btn_del"
                android:text="删除"
                android:gravity="center"
                android:background="@drawable/button_gray_frame_round"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@drawable/gray_white_textcolor_selector"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:textSize="30dp"
                android:id="@+id/btn_10"
                android:text="10"
                android:gravity="center"
                android:background="@drawable/button_gray_frame_round"/>
            <TextView
                android:textColor="@drawable/gray_white_textcolor_selector"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:textSize="30dp"
                android:id="@+id/btn_20"
                android:text="20"
                android:gravity="center"
                android:background="@drawable/button_gray_frame_round"/>
            <TextView
                android:textColor="@drawable/gray_white_textcolor_selector"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:textSize="30dp"
                android:id="@+id/btn_50"
                android:text="50"
                android:gravity="center"
                android:background="@drawable/button_gray_frame_round"/>
            <TextView
                android:textColor="@drawable/gray_white_textcolor_selector"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:textSize="30dp"
                android:id="@+id/btn_100"
                android:text="100"
                android:gravity="center"
                android:background="@drawable/button_gray_frame_round"/>
        </LinearLayout>
    </LinearLayout>
    <!--end of keyboard-->
</LinearLayout>