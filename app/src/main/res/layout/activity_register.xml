<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:background="@mipmap/login_bg">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_below="@id/account_layout"
        android:layout_width="452dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_title"
            android:textSize="32dp"
            android:textColor="@color/global_wpos_red"/>

        <EditText
            android:layout_marginTop="40dp"
            android:textSize="32dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone_num"
            android:gravity="left|bottom"
            android:inputType="textPassword"
            android:background="@drawable/none"
            android:textColor="@color/white"
            android:hint="@string/phone_num"
            android:textColorHint="@color/global_text_info_color"/>
        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white"/>
        <EditText
            android:layout_marginTop="48dp"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_pass1"
            android:gravity="left|bottom"
            android:inputType="textPassword"
            android:background="@drawable/none"
            android:hint="@string/new_password"
            android:textColorHint="@color/global_text_info_color"/>
        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white"/>

        <EditText
            android:layout_marginTop="48dp"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_pass2"
            android:gravity="left|bottom"
            android:inputType="textPassword"
            android:background="@drawable/none"
            android:hint="@string/confirm_new_password"
            android:textColorHint="@color/global_text_info_color"/>
        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white"/>

        <RelativeLayout
            android:layout_marginTop="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/request_verify_code"
                android:textColor="@color/white"
                android:background="@drawable/button_wpos_plant"
                android:text="@string/send_verify_code"/>
            <EditText
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/request_verify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/input_verify"
                android:background="@drawable/none"
                android:hint="@string/verify_code"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:textColorHint="@color/global_text_info_color"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white"/>

        <!--<TextView-->
            <!--android:padding="5dp"-->
            <!--android:layout_marginTop="22dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="right"-->
            <!--android:textSize="24dp"-->
            <!--android:id="@+id/forget_passwd"-->
            <!--android:textColor="@color/global_wpos_red"-->
            <!--android:text="@string/forget_passwd_underline"-->
            <!--android:visibility="gone"/>-->
        <TextView
            android:background="@drawable/button_wpos_red_round_rect"
            android:layout_marginTop="46dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:layout_gravity="right"
            android:textSize="30dp"
            android:id="@+id/submit_btn"
            android:textColor="@color/white"
            android:text="@string/btn_ok"/>
    </LinearLayout>

    <!--<ListView-->
    <!--android:layout_marginTop="17dp"-->
    <!--android:layout_below="@id/account_layout"-->
    <!--android:layout_width="452dp"-->
    <!--android:layout_height="213dp"-->
    <!--android:id="@+id/account_list_v"-->
    <!--android:dividerHeight="1px"-->
    <!--android:divider="@color/white"-->
