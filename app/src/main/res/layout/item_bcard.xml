<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/global_transparent_shadow_click_state">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_margin="15dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:background="@drawable/button_blue_round"
        android:layout_width="350dp"
        android:layout_height="wrap_content">
        <RelativeLayout
        android:layout_margin="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/icon_user"
        android:layout_alignParentLeft="true"
        android:id="@+id/bank_icon_layout"
        android:layout_alignParentTop="true"
            android:visibility="invisible">
        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/bank_icon"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_user"/>
        </RelativeLayout>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bank_name"
        android:layout_alignTop="@id/bank_icon_layout"
        android:layout_toRightOf="@id/bank_icon_layout"
        android:textSize="20dp"
        android:text="招商银行"
        android:textColor="@color/white"/>
        <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@id/bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_type"
        android:layout_toRightOf="@id/bank_icon_layout"
        android:textSize="16dp"
        android:text="储蓄卡"
        android:textColor="@color/white"/>

        <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/card_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_code"
            android:layout_centerHorizontal="true"
        android:textSize="32dp"
        android:text="**** **** **** 0066"
        android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/add_img"
            android:layout_centerInParent="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_add_gray"/>
    </RelativeLayout>

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/main_layout"
        android:layout_marginRight="-20dp"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/del_card"
        android:src="@mipmap/big_icon_del"/>
    <ImageView
        android:layout_alignBottom="@id/main_layout"
        android:layout_alignRight="@id/main_layout"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/card_check"
        android:src="@mipmap/icon_y"/>
</RelativeLayout>
