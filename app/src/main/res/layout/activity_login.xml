<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@mipmap/login_bg">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/account_layout"
        android:layout_marginTop="150dp"
        android:layout_width="452dp"
        android:layout_alignParentTop="true"
        android:layout_height="44dp">
        <ImageView
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/show_account_list_btn"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_arrow_down"/>
        <ImageView
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/del_account"
            android:layout_toLeftOf="@id/show_account_list_btn"
            android:src="@mipmap/icon_del"/>
        <EditText
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/del_account"
            android:layout_alignParentLeft="true"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/account"
            android:gravity="left|center_vertical"
            android:background="@drawable/none"
            android:hint="@string/account"
            android:imeOptions="actionNext"
            android:textColorHint="@color/global_text_info_color"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_below="@id/account_layout"
        android:layout_width="452dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white"/>
        <EditText
            android:layout_marginTop="48dp"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:gravity="left|bottom"
            android:inputType="textPassword"
            android:background="@drawable/none"
            android:imeOptions="actionDone"
            android:hint="@string/password"
            android:textColorHint="@color/global_text_info_color"/>
        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white"/>
        <TextView
            android:padding="5dp"
            android:layout_marginTop="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="24dp"
            android:id="@+id/forget_passwd"
            android:textColor="@color/btn_wpos_red"
            android:text="@string/forget_passwd_underline"/>
        <TextView
            android:background="@drawable/button_wpos_red_round_rect"
            android:layout_marginTop="46dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:layout_gravity="right"
            android:textSize="30dp"
            android:id="@+id/login_btn"
            android:textColor="@color/white"
            android:text="@string/login"/>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/register"
            android:padding="5dp">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="24dp"
                android:textColor="@color/global_text_info_color"
                android:text="还没有账号？"/>
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="24dp"
                android:textColor="@color/btn_wpos_red"
                android:text="@string/register_underline"/>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:layout_below="@id/account_layout"
        android:layout_width="452dp"
        android:layout_height="213dp"
        android:id="@+id/account_list_v"
        android:dividerHeight="1px"
        android:divider="@color/white"
        android:visibility="gone"/>

    <include layout="@layout/global_loading" />



</RelativeLayout>
