<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.walkpos.wpospad" >

    <uses-sdk android:minSdkVersion="18" android:targetSdkVersion="18"/>
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <!--是否只能在支持BLE 机器上运行-->
    <!--<uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>-->

    <application
        android:name=".main.WPosApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/TransparentAppTheme">
        <activity
            android:name=".store.StoreManageActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.LoginIdentyActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".login.RegisterActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".login.VerifyDetailActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".login.VerifyMidActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".login.VerifyPicActivity"
            android:screenOrientation="landscape"/>

        <activity android:name=".main.MainActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".main.SettingActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".main.StaffManageActivity"
            android:screenOrientation="landscape"/>

        <!--<activity android:name=".store.StoreManageActivity"-->
            <!--android:screenOrientation="landscape"/>-->

    </application>

</manifest>
